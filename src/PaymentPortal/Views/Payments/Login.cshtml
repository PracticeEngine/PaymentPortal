@model PaymentPortal.Models.LoginModel
<div class="row">
    <div class="col-md-3">
        <img src="@Html.Raw(System.Configuration.ConfigurationManager.AppSettings["FirmLogo"])" alt="@Html.Raw(System.Configuration.ConfigurationManager.AppSettings["FirmName"])" class="img-responsive" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        @if (Model.Request.HasValue && Model.Request.Value != Guid.Empty)
        {
            using (Html.BeginForm("Login", "Payments", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                <fieldset>
                    <legend>Payment Portal Login</legend>
                    <input type="hidden" name="Link" value="@Model.Link" />
                    <input type="hidden" name="Request" value="@Model.Request" />
                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="clientcode">Client Code</label>
                        <div class="col-sm-8">
                            <input type="text" id="clientcode" autocomplete="off" autofocus name="ClientNumber" value="@Model.ClientNumber" />
                            <span class="help-block">Also known as Client or Account Number.</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-4 col-sm-8">
                            <button type="submit" class="btn btn-primary">Login to Payment Portal</button>
                        </div>
                    </div>
                </fieldset>
            }
        }
        else
        {
            <div class="alert alert-danger">
                <h2>Sorry, this link is currently locked out.</h2>
                <p>This is a temporary security lock. Please wait a while and try again later.</p>
            </div>
        }
    </div>
</div>

